<div class="container">
    <br>
    <h1 style="line-height:0; color:#000000;">Quotes</h1><hr>

    <% @posts.each do |post| %>
      <div class="well">
        <button type="button" class="btn btn-danger" style="float: right;"><a href="/posts/<%= post.id %>/delete" style="text-decoration: none; color: inherit;">Delete Quote</a></button>
        
        <h3><%= post.subject %></h3>
        <h5><%= post.email %></h5>
        <pre style="color:#000000;"><%= post.message %></pre>
        <p style="color:#000000;"><b><%= post.name %></b> submitted <b><%= time_ago_in_words(post.created_at) + 'ago' %></b></p><hr>
        
        <% post.comments.each do |comment| %>
          <p style="color:#000000;">><%= comment.content %>---<a href="/comments/<%= comment.id %>/delete">[X]</a><br></p>
        <% end %>
        <form action="/posts/<%= post.id %>/comments" method="POST">
          <input type="text" class="form-control" id="inputDefault" placeholder="comment" name="content"><br>
          <button type="submit" class="btn btn-primary">New Comment</button>
        </form>
      </div>
    <% end %>
</div>	
	
